#!/bin/bash
alias cls='clear'
alias susu='sudo su -'
alias ls='ls -h --color=auto'
alias ll='ls -l'
alias la='ls -la'
alias l='ls -a'
alias dir='dir --color=auto'
alias vdir='vdir --color=auto'

alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias ......='cd ../../../../..'
alias .......='cd ../../../../../..'
alias cd..='cd ..'
alias cd...='cd ../..'
alias cd....='cd ../../..'
alias cd.....='cd ../../../..'
alias cd......='cd ../../../../..'
alias md='mkdir -p'
#alias rm='rm -rf'
alias po=popd
alias pu=pushd

alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
alias psgrep='ps -aAf | grep '

alias apt-i='apt-get install'
alias apt-u='apt-get update'
alias apt-uu='apt-get upgrade'
alias apt-uuu='apt-get update && apt-get upgrade'
alias apt-s='apt-cache search'
alias apt-ss='apt-cache show'
alias apt-r='apt-get remove'
alias apt-ar='apt-get autoremove'

alias untar='tar -xzvf'
